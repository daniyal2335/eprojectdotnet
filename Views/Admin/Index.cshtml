@model IEnumerable<Eproject.Models.Caterer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Place)</th>
                <th>@Html.DisplayNameFor(model => model.imagePath)</th>
                <th>@Html.DisplayNameFor(model => model.MaxPeople)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.PricePerPerson)</th>
                <th>Food Types</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Place)</td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.imagePath)" Style="width:50px;height:50px" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.MaxPeople)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.PricePerPerson)</td>
                    <td>
                        @foreach (var catererFoodType in item.CatererFoodtypes)
                        {
                            <span>@catererFoodType.FoodType.FoodTypeName</span>
                            <br />
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CatererId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.CatererId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

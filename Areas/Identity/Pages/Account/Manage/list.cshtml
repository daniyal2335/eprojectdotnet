@page
@model Eproject.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Users and Caterers";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th> <!-- Add Actions column for the delete button -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in (List<Eproject.Areas.Identity.Data.ApplicationUser>)ViewData["UsersAndCaterers"])
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <!-- Delete Form -->
                    <form method="post" asp-page-handler="DeleteUser" asp-route-userId="@user.Id" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
